{
  "description": "Update tmux window title with Claude Code status indicators",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-tmux-title.sh \"✻\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-tmux-title.sh \"✓\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/capture-tmux-pane.sh"
          },
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-tmux-title.sh \"○\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-tmux-title.sh \"?\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-tmux-title.sh \"⌫\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-for-tool-hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "stdin",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/update-tmux-title.sh \"✻\""
          }
        ]
      }
    ]
  }
}
